<a href="<%= home_path %>" class="flex items-center <%= 'bg-gray-200' if current_page?(home_path)  %> px-4 py-2">
    <i class="far fa-calendar-check text-purple-500 w-6 "></i>
    <span class="flex-grow">Today's Tasks</span>
    <span class="font-bold bg-white h-5 w-5 text-xs leading-none rounded-full flex items-center justify-center"><%= @todays_tasks.count %></span>
</a>
<div class="p-4 flex items-center ">
    <i class="fas fa-layer-group w-6"></i><h1 class="font-bold text-sm text-gray-800 tracking-wider">TASK CATEGORIES</h1>
</div>
<% if @categories.length != 0 %>
    <ul>
        <% @categories.each do |category|%>
            <li class="<%= 'bg-gray-200' if params[:id].to_i == category.id %> px-4 hover:bg-gray-200 hover:text-gray-800 text-gray-400 cursor-pointer flex items-center">
                <a href="<%= category_path(category.id) %>" class="flex-grow pl-6 py-2 text-gray-800"><%= category.name %></a>
                <div class="flex space-x-2 text-sm ">
                    <%# <%= link_to category_path(category.id) do %> 
                        <%# <i class="far fa-eye hover:text-purple-500"></i>   %>
                    <%# <% end %> 
                    <%= link_to edit_category_path(category.id) do %>
                        <i class="fas fa-pen hover:text-purple-800"></i>  
                    <% end %>
                    <%= link_to category_path(category.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
                        <i class="fas fa-trash hover:text-red-500"></i>  
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>
<% else %>
    <p class="px-10 py-2">No category added</p>
<% end %>
<div class="px-4 py-2 text-purple-500">
    <%= link_to "Add new category", new_category_path, class: "pl-6 underline " %>
</div>