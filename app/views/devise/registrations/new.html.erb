<div class="container mx-auto">
  <div class="sm:bg-white max-w-lg mx-auto p-8 md:p-12 my-4 rounded-lg ">
    <section>
        <h3 class="font-bold text-2xl text-purple-500">Welcome to Tasky</h3>
        <p class="text-gray-600 pt-2">Create your account.</p>
    </section>
    <section class="mt-10">
      <%= form_for(resource, as: resource_name, :html => {:class => "flex flex-col"}, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-6 pt-3 rounded-lg bg-gray-50">
          <%= f.label :email, class: 'block text-gray-700 text-sm font-bold ml-3' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-50 rounded-lg w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3' %>
        </div>

        <div class="field mb-6 pt-3 rounded-lg bg-gray-50">
          <%= f.label :password, class: 'block text-gray-700 text-sm font-bold ml-3' %>
         
          <%= f.password_field :password, autocomplete: "new-password", class: 'bg-gray-50 rounded-lg w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3' %>
        </div>

        <div class="field mb-6 pt-3 rounded-lg bg-gray-50">
          <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold ml-3' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-gray-50 rounded-lg w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'w-full bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200' %>
        </div>
      <% end %>
      <div class="max-w-lg mx-auto text-center mt-12 mb-6">
        <%= render "devise/shared/links" %>
        
      </div>
      
    </section>
  </div>
</div>
